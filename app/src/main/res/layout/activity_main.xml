<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">


<LinearLayout
android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#1976D2"
    android:gravity="center">

<TextView
android:id="@+id/title_text"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="AndroidSmartDevice"
android:textSize="24sp"
    android:textStyle="bold"
    android:textColor="#FFFFFF"
    android:gravity="center"/>
    </LinearLayout>


<Space
android:layout_width="match_parent"
android:layout_height="32dp"/>


<TextView
android:id="@+id/welcome_text"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Bienvenue dans votre application Smart Device"
android:textSize="22sp"
    android:layout_gravity="center"
    android:textColor="#1976D2"
    android:textStyle="bold"
    android:paddingTop="16dp"
    android:paddingBottom="8dp"/>


<TextView
android:id="@+id/description_text"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Pour dÃ©marrer vos interactions avec les appareils BLE environnants cliquer sur commencer"
android:textSize="16sp"
android:layout_gravity="center"
android:textColor="#808080"
    android:paddingBottom="32dp"/>

    <ImageView
        android:id="@+id/bluetooth_icon"
        android:layout_width="139dp"
        android:layout_height="170dp"
        android:layout_gravity="center"
        android:paddingBottom="32dp"
        android:src="@drawable/logob" />


<Space
android:layout_width="match_parent"
android:layout_height="48dp"/>

    <Button
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_gravity="center"
        android:backgroundTint="#1976D2"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:text="COMMENCER"
        android:textColor="#FFFFFF" />
    </LinearLayout>
